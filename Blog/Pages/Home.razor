@page "/"

<PageTitle>prozolicの技術ブログかもしれない</PageTitle>

<div class="blog-posts">

	@foreach(var posts in PostProvider.AllPost)
	{
		foreach(var post in posts)
		{
			<article class="post">
				<header>
					<h2 class="post-title">
						<a href="@post.Url">@post.Title</a>
					</h2>
					<div class="post-meta">
						<time>@post.Date</time>
					</div>
				</header>
				<div class="post-excerpt">
					@post.HeadText
				</div>
			</article>
		}
	}

